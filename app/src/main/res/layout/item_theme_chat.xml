<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutItemMedic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_emergency_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/view_medic_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_admin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_birthday_person" />

        <ImageView
            android:id="@+id/image_view_me"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="307dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_birthday_person" />

        <TextView
            android:id="@+id/me_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="285dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="13dp"
            android:gravity="right"
            android:text="ฉัน"
            android:textAlignment="gravity"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/owner_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="13dp"
            android:text="Nawakarn"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/owner_message"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:padding="6dp"
            android:text="text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/message_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/me_message"
            android:layout_marginStart="35dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="20dp"
            android:gravity="right"
            android:padding="6dp"
            android:text="text"
            android:textAlignment="gravity"
            android:textSize="15dp" />


    </RelativeLayout>


</LinearLayout>