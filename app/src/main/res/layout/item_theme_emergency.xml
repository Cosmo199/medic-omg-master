<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemMedic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/view_medic_bg"
        android:id="@+id/layout_emergency_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:id="@+id/image_view_emergency"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/name_emergency"
            android:layout_marginStart="103dp"
            android:textSize="15dp"
            android:text="ฝ่ายประชาสัมพัน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp" />

        <TextView
            android:layout_below="@id/name_emergency"
            android:layout_marginTop="10dp"
            android:id="@+id/call_emergency"
            android:layout_marginStart="103dp"
            android:textSize="15dp"
            android:text="แผนก: ศัลยกรรม"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp" />

        <TextView
            android:layout_below="@id/call_emergency"
            android:layout_marginTop="10dp"
            android:id="@+id/email_emergency"
            android:layout_marginStart="130dp"
            android:textSize="15dp"
            android:text="karn@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_email_24"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/call_emergency"
            android:layout_marginStart="103dp"

            />


    </RelativeLayout>


</LinearLayout>