<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">

        <ImageView
            android:id="@+id/image_view_doc1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/cardview_dark_background"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/action_back_to_home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/image_view_doc2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/linear_1"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_dark_background"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:id="@+id/linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_doc1"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_topic_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_topic_1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/doc_detail"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_topic_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/detail_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_topic_1"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/doc_detail"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/name_topic_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_topic_1"
                android:layout_margin="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/doc_detail"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_topic_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_topic_1"
                android:layout_margin="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/doc_detail"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_topic_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_topic_1"
                android:layout_margin="1dp"
