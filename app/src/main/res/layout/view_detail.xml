<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_detail_activity"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_below="@id/linear_1"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/name_doctor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="ปรึกษาแพทย์ :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/card_medic"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/view_medic_bg"
        app:cardCornerRadius="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/medic_image"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/doctor" />

        <TextView
            android:id="@+id/medic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="26dp"
            android:singleLine="true"
            android:text="@string/medic_name_mock"
            android:textSize="15dp" />

    </RelativeLayout>


</LinearLayout>